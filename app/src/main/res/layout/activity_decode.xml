<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DecodeActivity"
    android:gravity="center_horizontal"
    android:background="#ffdcebff"
    android:weightSum="1">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|textNoSuggestions"
        android:imeOptions="actionDone"
        android:id="@+id/numberInput"
        android:hint="@string/numberInputHint"
        android:maxLength="10"
        android:lines="1"
        android:digits="1234567890"
        android:layout_gravity="top|center_horizontal"
        android:textSize="@dimen/numberInput_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:text="@string/enter_code"
        android:id="@+id/decodeMessage"
        android:gravity="center_horizontal"
        android:lines="@integer/decodeMessage_lines_number"
        android:textSize="@dimen/numberInput_text_size" />

    <Button
        android:layout_width="145dp"
        android:layout_height="52dp"
        android:text="@string/button_decode"
        android:onClick="onButtonPressed"
        android:background="@drawable/button_custom"
        android:layout_weight="0.04"
        android:textColor="#ffffffff" />

</LinearLayout>
